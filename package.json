{
  "name": "gen-code-ai",
  "displayName": "gen-code-ai",
  "description": "Generation Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gen-code-ai.generate",
        "title": "Gen Code AI: Generate"
      }
    ],
    "configuration": {
      "title": "gen-code-ai",
      "properties": {
        "gen-code-ai.apiUrl": {
          "type": "string",
          "default": "https://gen-code-ai.onrender.com",
          "description": "AI Backend URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "openai": "^6.22.0"
  }
}